{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/admin-dashboard",
      "dest": "/server.js"
    },
    {
      "src": "/user-portal", 
      "dest": "/server.js"
    },
    {
      "src": "/contract",
      "dest": "/server.js"
    },
    {
      "src": "/admin",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|ico|svg|json|html|pdf|ttf|woff|woff2)"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
}